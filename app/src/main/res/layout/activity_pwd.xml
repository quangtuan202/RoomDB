<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp">

    <LinearLayout

        android:id="@+id/layout_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_close_24"/>
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/text_view_tool_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_pwd"
            android:textSize="22sp"
            android:layout_marginLeft="10dp"/>
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img_btn_ok"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_done_24"/>

    </LinearLayout>
    <Space
        android:layout_width="0dp"
        android:layout_height="20dp" />

        <EditText
            android:id="@+id/text_edit_pwd"
            android:drawableRight="@drawable/ic_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_marginRight="@dimen/margin_xlarge"
            android:background="@drawable/edittext_line"
            android:hint="@string/edit_pwd"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/padding_small"
            android:textColor="@color/edit_title"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="@dimen/font_medium_large"
            app:editFontPath="fonts/montserrat_light.otf" />

    </LinearLayout>

